<%- include('../partials/header'); %>

    <div class="container">
      <form>
            <div id="mensajes" class="mensajes">
              <%- include('./mensaje'); %>
            </div>  
            <hr>
            <h1 class="text-left">Whatsapp <i class="bi bi-whatsapp"></i></h1>
            <hr>
            <div class="mb-3">
                <label for="numero-wap" class="form-label"><i class="bi bi-whatsapp"></i> | Numero de Wap</label>
                <input type="text" class="form-control" name="numero_wap" id="numero-wap" value="+14155238886" aria-describedby="numerolHelp" disabled>
                <div id="numerolHelp" class="form-text">Este es el numero de wap del cual se envian los mensajes</div>
            </div>
            <!-- datos de la app telefono -->
            <div class="mb-3">
