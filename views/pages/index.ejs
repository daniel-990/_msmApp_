                <option value="3205936059">+57 3205936059</option>
              </select>
              <div id="numerolHelp" class="form-text">A este numero se enviara el mensaje via wasap</div>
            </div>
            <div class="mb-3">
              <label for="mensaje" class="form-label"><i class="bi bi-chat-right-dots"></i> | Mensaje</label>
              <textarea class="form-control" name="mensaje" id="mensaje" placeholder="Genere el mensaje para enviar"></textarea>
            </div>
            <button type="submit" id="btn-enviar" class="btn btn-primary"><i class="bi bi-send"></i> Enviar mensaje</button>
          </form>
    </div>

<%- include('../partials/footer'); %>